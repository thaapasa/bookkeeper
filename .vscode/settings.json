{
    "editor.tabSize": 2,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "node_modules": true,
        ".idea": true,
        "*.iml": true
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "javascript.validate.enable": false,
    "eslint.enable": true,
    "eslint.packageManager": "yarn",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
}

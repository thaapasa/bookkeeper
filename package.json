{
  "name": "bookkeeper",
  "version": "0.2.0",
  "main": "src/server/BookkeeperServer.ts",
  "private": true,
  "scripts": {
    "postinstall": "yarn update-revision",
    "watch-client": "react-scripts-ts start",
    "watch-server": "yarn update-revision && yarn migrate && nodemon",
    "test-client": "jest --runInBand",
    "test": "yarn test-client",
    "build-client": "react-scripts-ts build",
    "build-server": "tsc",
    "build-all": "yarn update-revision && yarn build-server && yarn build-client",
    "start-server-prod": "DEBUG=bookkeeper* NODE_ENV=production node build-server/server/BookkeeperServer.js",
    "eject-client": "react-scripts-ts eject",
    "update-revision": "sh script/update-revision.sh",
    "lint": "tslint --project .",
    "deploy": "sh script/deploy.sh",
    "clean": "rm -rf build/ dist/ build-server/",
    "ps-server": "ps -ef | grep ./src/server/BokkeeperServer.ts | grep -v grep | awk '{ print $2; }'",
    "kill-server": "ps -ef | grep ./src/server/BookkeeperServer.ts | grep -v grep | awk '{ print $2; }' | xargs kill",
    "migrate": "knex migrate:latest",
    "migrate-make": "knex migrate:make",
    "migrate-rollback": "knex migrate:rollback"
  },
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:haapasalot/bookkeeper.git"
  },
  "author": "Anu & Tuukka Haapasalo",
  "license": "ISC",
  "homepage": "https://kukkaro.pomeranssi.fi",
  "dependencies": {
    "baconjs": "2.0.7",
    "big.js": "5.1.2",
    "body-parser": "1.18.3",
    "d3": "5.5.0",
    "d3-axis": "1.0.8",
    "d3-interpolate": "1.2.0",
    "d3-scale": "2.1.0",
    "d3-selection": "1.3.0",
    "debug": "3.1.0",
    "dotenv": "6.0.0",
    "express": "4.16.3",
    "history": "4.7.2",
    "material-ui": "0.20.1",
    "moment": "2.22.2",
    "node-fetch": "2.1.2",
    "path": "0.12.7",
    "pg": "7.4.3",
    "pg-promise": "8.4.5",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "react-tap-event-plugin": "3.0.3",
    "styled-components": "3.3.3"
  },
  "devDependencies": {
    "@types/baconjs": "0.7.33",
    "@types/big.js": "4.0.5",
    "@types/body-parser": "1.17.0",
    "@types/d3": "5.0.0",
    "@types/d3-axis": "1.0.10",
    "@types/dotenv": "4.0.3",
    "@types/express": "4.16.0",
    "@types/jest": "23.1.4",
    "@types/material-ui": "0.21.3",
    "@types/node-fetch": "2.1.1",
    "@types/react": "16.4.6",
    "@types/react-dom": "16.0.6",
    "@types/react-router": "4.0.28",
    "@types/react-router-dom": "4.2.7",
    "@types/react-tap-event-plugin": "0.0.30",
    "jest": "23.3.0",
    "knex": "0.15.0",
    "nodemon": "1.17.5",
    "react-scripts-ts": "2.16.0",
    "ts-jest": "23.0.0",
    "ts-node": "7.0.0",
    "tslib": "1.9.3",
    "tslint": "5.10.0",
    "tslint-react": "3.6.0",
    "typescript": "2.9.2"
  },
  "directories": {
    "test": "test"
  },
  "proxy": "http://localhost:3100",
  "description": "Kukkaro - a web tool for tracking your income and expenses.",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}

{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build-server",
    "module": "esnext",
    "target": "es5",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
